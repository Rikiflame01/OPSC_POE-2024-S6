<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timesheetItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_sheet_entry_background"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Image on the left -->
    <ImageView
        android:id="@+id/timesheetImage"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/timesheet_entry_profile_pic_placeholder"
        android:visibility="visible" />

    <!-- Text views in a vertical layout -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timesheetDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ledger"
            android:text="Date: 25/09/2024"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/timesheetCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ledger"
            android:text="Category: Work"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timesheetHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ledger"
            android:text="Hours: 7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timesheetDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ledger"
            android:text="Description: "
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Delete Button -->
    <Button
        android:id="@+id/deleteEntryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:fontFamily="@font/ledger"
        android:text="Delete" />

</LinearLayout>
